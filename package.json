{
  "name": "stuttering-app-backend",
  "version": "1.0.0",
  "description": "Backend server for Stripe payment integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "security": "./scripts/security-scan.sh",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:snyk": "snyk test",
    "security:install-tools": "npm install -g snyk eslint-plugin-security && pip install semgrep",
    "security:full": "npm run security:audit && npm run security:snyk && ./scripts/security-scan.sh"
  },
  "engines": {
    "node": "18.19.0"
  },
  "dependencies": {
    "@azure/identity": "^4.12.0",
    "@azure/keyvault-secrets": "^4.10.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "nodemailer": "^6.9.7",
    "stripe": "^14.7.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "stripe",
    "payments",
    "subscriptions",
    "ios-app"
  ],
  "author": "Nick Dawson",
  "license": "MIT"
}
